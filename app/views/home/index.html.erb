<h1 class="h1 d-inline">Your Locations</h1> --



<%= link_to "Share Location", 'page_path', :id => 'login', "data-toggle" => "modal", 'data-target' => '#share_location', class: 'btn btn-outline-success' %>

<!-- Modal -->
<div class="modal fade" id="share_location" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: @location do |f| %>

        <% end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>